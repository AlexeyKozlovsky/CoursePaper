<Page x:Class="PhysicsEngine.Views.Pages.Momentum"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhysicsEngine.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Momentum">

    <Page.Resources>
        <ResourceDictionary Source="..\..\Dictionaries\Dictionary.xaml"/>
    </Page.Resources>
    <Grid>

        <Label Content="Сохранение импульса" 
               FontFamily="Segoe print" FontSize="30" FontWeight="DemiBold"
               HorizontalAlignment="Center" VerticalAlignment="Top"></Label>

        <Label  x:Name="stateLabel" VerticalAlignment="Center" HorizontalAlignment="Center"
               Style="{StaticResource lableStyle}" MouseEnter="stateLabel_MouseEnter"
                MouseLeave="stateLabel_MouseLeave"/>
        <Canvas x:Name="canvas" Width="Auto" Height="Auto" >
        </Canvas>
    </Grid>
</Page>
